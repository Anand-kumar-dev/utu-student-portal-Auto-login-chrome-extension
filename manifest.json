{
  "manifest_version": 3,
  "name": "Website Watcher & Enroller",
  "version": "1.0",
  "description": "Watches a website, prompts for enrollment and password, and performs an API call.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "cookies",
    "alarms"
  ],
  "host_permissions": [
    "https://autologin.duckdns.org/",
    "https://app.utu.ac.in/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://app.utu.ac.in/stud/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}